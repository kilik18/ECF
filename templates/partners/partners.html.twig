{% extends 'base.html.twig' %}

{% block title %}Liste des partenaires{% endblock %}

{% block body %}
<div class="container-fluid">
    <h1 class="text-decoration-underline d-flex justify-content-center" style="color: white;">Liste des partenaires</h1>
    <div class="container text-center">
        <div class="row">
            <div class="col-12" style="border: thick double white">
                <nav class="navbar">
                    <div class="d-flex col-4" role="search">
                        <input class="form-control me-2" type="search" placeholder="Rechercher un partenaire" aria-label="Search">
                        <button class="btn btn-outline-primary" type="submit">Rechercher</button>
                    </div>
                    <div>
                        <button class="btn btn-primary" type="submit">Filtres</button>
                    </div>
                </nav>
            </div>
        </div>
        <div class="row" style="border: thick double white">
            {% for partner in partners %}
                <div class="col-6 d-flex justify-content-center">
                <div class="card" style="width: 500px; height: 200px; margin: 20px; text-align: center">
                    <div class="card-body">
                        <h5 class="card-title">{{ partner.id }}){{ partner.name }}</h5>
                        <p class="card-text">
                            E-MAIL: {{ partner.mail }} <br>
                            DESCRIPTION: {{ partner.shortDescription }} <br>
                            ACTIVATION: {{ partner.activated }}
                        </p>
                        <a href="{{ path('partner_list', {id: partner.id}) }}" class="btn btn-primary">Gérer les clubs</a>
                    </div>
            </div>
            </div>
            {% endfor %}
        </div>
    </div>



    <a href="{{ path('main') }}" class="d-flex justify-content-center"><button class="btn btn-primary mt-5 col-4">Retour à l'accueil</button></a>
</div>
{% endblock %}
