{% extends 'base.html.twig' %}

{% block title %}Liste des structures de {{ partner.name }}{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="text-decoration-underline d-flex justify-content-center" style="color: white;">Liste des structures de {{ partner.name }}</h1>
        <div class="container text-center">
        <div class="row" style="border: thick double white">
        {% for structure in partner.structure %}
            <div class="col-6 d-flex justify-content-center">
            <div class="card" style="width: 500px; height: 200px; margin: 15px; text-align: center">
                <div class="card-body">
                    <h3 class="card-title">{{ structure.address }}</h3>
                    <h5 class="card-text">Nom du gérant: {{ structure.managerName }}</h5>
                    <p class="card-text">
                        DESCRIPTION: {{ structure.shortDescription }} <br>
                        ACTIVATION: {{ structure.activated }}
                    </p>
                </div>
            </div>
            </div>
        {% endfor %}
        </div>
       <div>
        <a href="{{ path('partners_list') }}" class="d-flex justify-content-center"><button class="btn btn-primary mt-5 col-4">Retour aux partenaires</button></a>
        <a href="{{ path('main') }}" class="d-flex justify-content-center"><button class="btn btn-primary mt-3 col-4">Retour à l'accueil</button></a>
       </div>
    </div>
    </div>
{% endblock %}
